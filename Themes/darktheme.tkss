Tk{
    background: "#303030";
}

TopLevel{
    background: "#303030";
}

Frame{
    background: "#303030";
}

LabelFrame{
    foreground: "#ffffff";
    background: "#303030";
}

Label{
    foreground: "#ffffff";
    background: "#303030";
    font: ("Arial", 12);
}

Label#leftlabel{
    foreground: "#0043fa";
    font: ("Arial", 15);
}
Label#rightlabel{
    foreground: "#dd00fa";
    font: ("Arial", 15);
}

